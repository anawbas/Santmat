<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#f5f5f6"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/play"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/playlist_item_thumb"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:contentDescription="@string/Playlist_Desc"
                app:srcCompat="@drawable/hqsample" />
            <TextView
                android:id="@+id/playlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_toEndOf="@id/playlist_item_thumb"
                android:text="@string/playlist_name" />

            <TextView
                android:id="@+id/playlist_Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="2dp"
                android:layout_toEndOf="@id/playlist_item_thumb"
                android:layout_below="@id/playlist_name"
                android:text="@string/Playlist_Desc" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>